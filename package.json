{
  "name": "LinkGoGo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@8.10.2",
  "scripts": {
    "dev": "pnpm run node:install && pnpm run go:install && concurrently \"pnpm run dev:css\" \"pnpm run dev:go\" \"pnpm run dev:templates\"",
    "dev:css": "tailwindcss -i web/assets/tailwind.css -o web/assets/dist/style.css --watch --jit",
    "dev:go": "nodemon --signal SIGTERM --watch '*/**' --ext go,css --exec \"go run main.go\"",
    "dev:templates": "nodemon --signal SIGTERM --watch '*/**' --ext templ --exec \"templ generate\"",
    "node:install": "pnpm install",
    "go:install": "go mod tidy",
    "db": "docker compose up -d"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  }
}